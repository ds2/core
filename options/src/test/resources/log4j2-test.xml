<configuration status="WARN">
  <appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{ISO8601} [%thread][%X{reqId}] %-5level %logger{36} - %msg%n" />
    </Console>
  </appenders>
  <loggers>
    <logger name="ds2.oss.core" level="debug">
      <appender-ref ref="Console" />
    </logger>
    <logger name="org.jboss.weld" level="debug">
      <appender-ref ref="Console" />
    </logger>
    <root level="info">
      <appender-ref ref="Console" />
    </root>
  </loggers>
</configuration>